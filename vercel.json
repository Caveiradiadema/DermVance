{
  "version": 2,
  "trailingSlash": true,

  "rewrites": [
    { "source": "/diadema/",               "destination": "/diadema.html" },
    { "source": "/santo-andre/",           "destination": "/santo-andre.html" },
    { "source": "/sao-bernardo-do-campo/", "destination": "/sao-bernardo-do-campo.html" },
    { "source": "/sao-caetano-do-sul/",    "destination": "/sao-caetano-do-sul.html" },
    { "source": "/terapia-cicatrizacao/",  "destination": "/terapia-cicatrizacao.html" }
  ],

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=300, must-revalidate" },
        { "key": "X-Robots-Tag", "value": "all" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=300, must-revalidate" }
      ]
    }
  ]
}
